<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jwy.bjtumidas.activity.user.LoginActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical">

        <com.jwy.bjtumidas.customize.TopBackAndTitleView
            android:id="@+id/tbatv_login_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <com.jwy.bjtumidas.customize.XCRoundRectIv
            android:id="@+id/XCRoundRectIv"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@mipmap/personal_myimg"/>


        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_input"
            android:hint="手机号/学号"
            android:textColorHint="#CACBCD"
            android:inputType="phone"
            android:maxLength="14"
            android:padding="10dp"
            android:textSize="20sp"/>



        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_input"
            android:hint="密码"
            android:textColorHint="#CACBCD"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="10dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_search_button"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onLogin"
            android:padding="10dp"
            android:text="登             录"
            android:textColor="#FFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onRegister"
            android:padding="6dp"
            android:text="注册账号"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="2dp"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@android:drawable/presence_online"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onGetPwd"
            android:padding="6dp"
            android:text="找回密码"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
